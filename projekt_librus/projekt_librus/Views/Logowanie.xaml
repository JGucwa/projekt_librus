<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projekt_librus.Views.Logowanie"
             BackgroundColor="#3e3e3e"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label HorizontalTextAlignment="Center" Text="Login:" FontSize="Large" TextColor="white"/>
            <Entry x:Name="login" TextColor="white"/>
            <Label HorizontalTextAlignment="Center" Text="Hasło:" FontSize="Large" TextColor="white"/>
            <Entry x:Name="haslo" IsPassword="True" TextColor="white"/>
            <Button Text="Loguj" BackgroundColor="CadetBlue" WidthRequest="100" Clicked="LogowaniePrzycisk"/>
            <Button Text="Rejestruj" BackgroundColor="CadetBlue" WidthRequest="100" Clicked="Rejestruj"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>